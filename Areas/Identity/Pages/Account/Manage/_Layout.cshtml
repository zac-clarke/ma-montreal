@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = parentLayout != null ?  (string)parentLayout : "/Areas/Identity/Pages/_Layout.cshtml";
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}


<div class="p-lg-4">
    <h2>Account settings</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
