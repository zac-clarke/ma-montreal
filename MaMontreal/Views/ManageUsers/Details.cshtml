@model MaMontreal.Models.ApplicationUser

@{
    ViewData["Title"] = Model.Email;
    @if (Model.FullName?.Trim() != "")
    {
         ViewData["Title"] = Model.FullName;
    }
    var roles = await UserManager.GetRolesAsync(Model); 
}

<h1>@(Model.FullName?.Trim() != "" ? Model.FullName :  Model.Email)</h1>

<div>
    <h4>
        @String.Join(", ", roles)
        <a asp-action="EditRoles" asp-route-id="@Model?.Id"><i class="fa-solid fa-edit me-1"> </i></a></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
            @if (Model.EmailConfirmed)
            {
                <span class="text-success"><i class="fa-solid fa-check me-1"> </i>Confirmed</span>
            }
            else
            {
                <span class="text-warning">Not Confirmed</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
            @if (Model.PhoneNumber != null)
            {
                @if (Model.PhoneNumberConfirmed)
                {
                    <span class="text-success"><i class="fa-solid fa-check me-1"> </i>Confirmed</span>
                }
                else
                {
                    <span class="text-warning">Not Confirmed</span>
                }
            }  
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SobrietyDate)
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.SobrietyDate?.ToString().Substring(0,10)</p>
        </dd>
           <dt class = "col-sm-2">
           <p>Two Factor Authentication</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@(Model.TwoFactorEnabled ? "Enabled" : "Disabled")</p>
        </dd>
    </dl>
</div>
<div>
    <table class="table">

    <thead>
        <tr>
            <th scope="col">Two Factor Authentication</th>
            <th scope="col">@Html.DisplayNameFor(model => model.LockoutEnabled)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.LockoutEnd)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.AccessFailedCount)</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td> @Html.DisplayFor(model => model.TwoFactorEnabled)</td>
            <td> @Html.DisplayFor(model => model.LockoutEnabled)</td>
            <td> @Html.DisplayFor(model => model.LockoutEnd)</td>
            <td> @Html.DisplayFor(model => model.AccessFailedCount)</td>
        </tr>
    </tbody>
    </table>
</div>
<div>

    <a asp-action="Index">Back to List</a>
</div>
