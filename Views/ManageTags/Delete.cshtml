@model MaMontreal.Models.Tag

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}



<h4>Are you sure you want to delete this tag?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-dark"><i class="fa-solid fa-arrow-left me-1"></i>Back</a>
        <button class="btn btn-danger"><i class="fa-solid fa-trash me-1"></i>Delete</button>
    </form>
</div>
