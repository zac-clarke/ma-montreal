@model MaMontreal.Models.UserRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<h4>Submit a Request to become a GSR</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <a asp-action="Details" class="btn btn-dark" asp-route-id="@Model?.Id"><i class="fa-solid fa-arrow-left me-1"></i>Back</a>
                <button class="btn btn-primary"><i class="fa-solid fa-save me-1"></i>Submit Request</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
