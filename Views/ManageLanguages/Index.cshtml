@model IEnumerable<MaMontreal.Models.Language>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}
<div class="d-flex justify-content-between">
    <h2>Languages</h2>

    <div> 
        <input type="text" id="search" placeholder="Search" class="col"/>
        <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus me-1"></i>Add New</a>
    </div>
</div>
<table class="table table-hover" id="mytable">
    <thead>
        <tr>
            <th role="button" scope="col">Actions</th>
            <th role="button" scope="col" onclick="sortTable(1)">Language Name  <i class="fa-solid fa-sort text-primary"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-eye"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash text-danger"></i></a>
                </td>
                <td> @Html.DisplayFor(modelItem => item.Title) </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
      <script src="~/js/sortAndSearchTable.js"></script>
}