@inject IConfiguration configuration
@{ ViewData["Title"] = "Seek Help"; }

<h1>Seek Help</h1>

<div class="card border-3 shadow mb-5">
  <div class="container">
    <div class="row">
      <div class="col m-5 justify-content-center">
        <h2>@SharedHtmlLocalizer["seek_help_title"]</h2>
        <p>
          @SharedHtmlLocalizer["seek_help_body"]
